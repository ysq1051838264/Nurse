<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        //闪屏页图片
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="theme_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:background">@drawable/drawable_shape_blue</item>
        <item name="android:textColor">@color/white_255</item>
    </style>

    <style name="red_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:background">@drawable/drawable_shape_red</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
